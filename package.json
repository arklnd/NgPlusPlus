{
    "name": "ngplusplus",
    "version": "0.0.0",
    "description": "Angular version upgrade helper MCP",
    "main": "index.js",
    "type": "module",
    "bin": {
        "ngplusplus": "./build/index.js"
    },
    "files": [
        "build"
    ],
    "scripts": {
        "build": "node -e \"require('fs').rmSync('./build', {recursive: true, force: true})\" && tsc && node -e \"require('fs').copyFileSync('./.env', './build/.env')\" && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
        "test": "mocha --loader=ts-node/esm --require source-map-support/register \"test/**/*.test.ts\"",
        "test:unit": "mocha --loader=ts-node/esm --require source-map-support/register \"test/**/*.test.ts\""
    },
    "author": "Arijit Kundu",
    "license": "ISC",
    "devDependencies": {
        "@types/chai": "5.2.2",
        "@types/mocha": "10.0.10",
        "@types/node": "^24.2.1",
        "chai": "5.2.1",
        "mocha": "11.7.1",
        "source-map-support": "0.5.21",
        "ts-node": "10.9.2",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.17.2",
        "@types/semver": "7.7.0",
        "dotenv": "17.2.1",
        "npm-check-updates": "18.0.2",
        "openai": "5.12.2",
        "semver": "7.7.2",
        "zod": "^3.23.8"
    },
    "mocha": {
        "extension": ["test.ts"],
        "loader": "ts-node/esm",
        "require": [
            "source-map-support/register"
        ]
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
        "compilerOptions": {
            "module": "ESNext",
            "moduleResolution": "node"
        }
    }
}
