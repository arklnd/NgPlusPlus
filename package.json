{
    "name": "ngplusplus",
    "version": "0.0.0",
    "description": "Angular version upgrade helper MCP",
    "main": "dist/index.js",
    "type": "module",
    "bin": {
        "ngpp": "./dist/index.js"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "bun src/index.ts",
        "build": "tsc -p tsconfig.build.json",
        "rebuild": "bun run clean && tsc -p tsconfig.build.json",
        "start": "bun dist/index.js",
        "clean": "bun -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
        "build:watch": "tsc -p tsconfig.build.json --watch",
        "test": "bun test --timeout=3600000"
    },
    "author": "Arijit Kundu",
    "license": "ISC",
    "devDependencies": {
        "@types/handlebars": "4.0.40",
        "@types/node": "^24.2.1",
        "bun-types": "1.3.1",
        "nyc": "17.1.0",
        "source-map-support": "0.5.21",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.17.2",
        "@types/semver": "7.7.0",
        "dotenv": "17.2.1",
        "fast-deep-equal": "3.1.3",
        "handlebars": "4.7.8",
        "npm-check-updates": "18.0.2",
        "openai": "5.12.2",
        "semver": "7.7.2",
        "simple-git": "3.28.0",
        "zod": "^3.23.8"
    }
}
