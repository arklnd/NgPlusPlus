{
    "name": "ngplusplus",
    "version": "0.0.0",
    "description": "Angular version upgrade helper MCP",
    "main": "dist/index.js",
    "type": "module",
    "bin": {
        "ngpp": "./dist/index.js"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "build:watch": "tsc -p tsconfig.build.json --watch",
        "clean:build": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
        "clean:db": "node -e \"const fs=require('fs'),path=require('path');function d(dir){const f=fs.readdirSync(dir);for(const e of f){const p=path.join(dir,e);fs.statSync(p).isDirectory()?d(p):e.endsWith('.db')&&fs.rmSync(p,{force:true})}}d('.')\"",
        "clean:gitgit": "node -e \"require('fs').rmSync('test/assets/git-git', {recursive: true, force: true})\"",
        "dev": "tsx src/index.ts",
        "export:test-assets": "tsx .github/scripts/compress-test-assets.ts",
        "import:github": "tsx .github/scripts/import-github.ts",
        "rebuild": "npm run clean:build && tsc -p tsconfig.build.json",
        "show:cache": "tsx .github/scripts/print-cache.ts",
        "show:gitgitlogs": "tsx .github/scripts/show-git-logs.ts",
        "start": "node dist/index.js",
        "test": "npx mocha"
    },
    "author": "Arijit Kundu",
    "license": "ISC",
    "devDependencies": {
        "@types/adm-zip": "0.5.7",
        "@types/better-sqlite3": "7.6.13",
        "@types/chai": "5.2.2",
        "@types/handlebars": "4.0.40",
        "@types/mocha": "10.0.10",
        "@types/node": "^24.2.1",
        "@types/npmcli__arborist": "6.3.1",
        "chai": "5.2.1",
        "mocha": "11.7.1",
        "nyc": "17.1.0",
        "source-map-support": "0.5.21",
        "tsx": "4.20.5",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.17.2",
        "@npmcli/arborist": "9.1.9",
        "@types/semver": "7.7.0",
        "adm-zip": "0.5.16",
        "better-sqlite3": "12.4.1",
        "dotenv": "17.2.1",
        "fast-deep-equal": "3.1.3",
        "handlebars": "4.7.8",
        "npm-check-updates": "18.0.2",
        "openai": "5.12.2",
        "semver": "7.7.2",
        "simple-git": "3.28.0",
        "snyk-nodejs-lockfile-parser": "2.4.2",
        "zod": "^3.23.8"
    }
}
