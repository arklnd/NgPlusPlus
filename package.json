{
    "name": "ngplusplus",
    "version": "0.0.0",
    "description": "Angular version upgrade helper MCP",
    "main": "dist/index.js",
    "type": "module",
    "bin": {
        "ngplusplus": "./dist/index.js"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "tsx src/index.ts",
        "build": "tsc -p tsconfig.build.json",
        "start": "node dist/index.js",
        "clean": "rmdir /s /q dist 2>nul || echo dist folder cleaned",
        "build:watch": "tsc -p tsconfig.build.json --watch",
        "test": "mocha --import=tsx \"test/**/*.test.ts\"",
        "test:unit": "mocha --import=tsx \"test/**/*.test.ts\"",
        "test:mocha": "mocha --import=tsx \"test/**/*.test.ts\""
    },
    "author": "Arijit Kundu",
    "license": "ISC",
    "devDependencies": {
        "@types/chai": "5.2.2",
        "@types/mocha": "10.0.10",
        "@types/node": "^24.2.1",
        "chai": "5.2.1",
        "mocha": "11.7.1",
        "source-map-support": "0.5.21",
        "ts-node": "10.9.2",
        "tsx": "4.20.5",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.17.2",
        "@types/semver": "7.7.0",
        "dotenv": "17.2.1",
        "npm-check-updates": "18.0.2",
        "openai": "5.12.2",
        "semver": "7.7.2",
        "zod": "^3.23.8"
    },
    "mocha": {
        "extension": [
            "test.ts"
        ],
        "spec": "test/**/*.test.ts",
        "timeout": 10000
    }
}
