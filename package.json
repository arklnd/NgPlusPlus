{
    "name": "ngplusplus",
    "version": "0.0.0",
    "description": "Angular version upgrade helper MCP",
    "main": "dist/index.js",
    "type": "module",
    "bin": {
        "ngplusplus": "./dist/index.js"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "tsx src/index.ts",
        "build": "tsc -p tsconfig.build.json",
        "rebuild": "npm run clean && tsc -p tsconfig.build.json",
        "start": "node dist/index.js",
        "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
        "build:watch": "tsc -p tsconfig.build.json --watch",
        "test": "npx mocha"
    },
    "author": "Arijit Kundu",
    "license": "ISC",
    "devDependencies": {
        "@types/chai": "5.2.2",
        "@types/mocha": "10.0.10",
        "@types/node": "^24.2.1",
        "chai": "5.2.1",
        "mocha": "11.7.1",
        "nyc": "17.1.0",
        "source-map-support": "0.5.21",
        "ts-node": "10.9.2",
        "tsx": "4.20.5",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.17.2",
        "@types/semver": "7.7.0",
        "dotenv": "17.2.1",
        "npm-check-updates": "18.0.2",
        "openai": "5.12.2",
        "semver": "7.7.2",
        "zod": "^3.23.8"
    }
}