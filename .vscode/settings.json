{
    "chat.mcp.serverSampling": {
        "NgPlusPlus/.vscode/mcp.json: NgPlusPlus": {
            "allowedModels": [
                "copilot/gpt-4.1",
                "copilot/claude-3.5-sonnet",
                "copilot/claude-3.7-sonnet",
                "copilot/claude-3.7-sonnet-thought",
                "copilot/claude-sonnet-4",
                "copilot/gemini-2.0-flash-001",
                "copilot/gemini-2.5-pro",
                "copilot/gpt-4o",
                "copilot/o3-mini",
                "copilot/o4-mini",
                "copilot/gpt-5"
            ]
        }
    },
    // Matches "spec" in mocharc
    "mocha.files.glob": "test/**/*.test.ts",
    // Loads "tsx" at runtime, matching your "import" in mocharc (use "tsx/register" if needed)
    "mocha.requires": [
        "tsx"
    ],
    // Sets timeout
    "mocha.timeout": 3600000,
    // Other options available:
    "mocha.options": {
        "timeout": 3600000
    },
    // Enable decorations, test lens, etc.
    "mocha.sideBarOptions": {
        "lens": true,
        "decoration": true,
        "autoUpdateTime": 2000,
        "showDebugTestStatus": true
    },
    // (Optional) Enable parallel runs
    "mocha.parallelTests": 2, // pick number of parallel tests; default is 1
    // coverage settings can be added here as well
    "mocha.coverage": {
        "enable": false
    }
}