{
    "version": "0.2.0",
    "inputs": [
        {
            "id": "mochaGrep",
            "type": "promptString",
            "description": "Enter Mocha grep string",
            "default": "should invoke dumbResolverHandler with HYUI8 Angular dependencies"
        }
    ],
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current Mocha Test (TypeScript)",
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
            "args": [
                "--config",
                "${workspaceFolder}/.mocharc.json",
                "${file}",
                "--grep",
                "${input:mochaGrep}"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Mocha Test",
            "port": 9229
        }
    ]
}