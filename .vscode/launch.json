{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current Mocha Test (TypeScript)",
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
            "args": [
                "--config",
                "${workspaceFolder}/.mocharc.json",
                "${file}"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Mocha Test",
            "port": 9229
        }
    ]
}